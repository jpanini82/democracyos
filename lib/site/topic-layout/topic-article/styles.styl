.topic-article-wrapper
  width 100%
  overflow auto

  @import './header/styles'
  @import './content/styles'
  @import './footer/styles'
  @import './decision-maker/styles'
  @import './participants/styles'
.topic-overlay
  position fixed
  top 0
  right 0
  width 100%
  height 100%
  z-index 1
  background rgba(0,0,0,0.5)

  @media screen and (min-width 701px)
    display none

.topic-article-content
  max-width 600px
  margin 0 auto
  padding-left 15px
  padding-right 15px

.embed-container
  position relative
  padding-bottom 56.25%
  height 0
  overflow hidden
  max-width 100%

  iframe
  object
  embed
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    border none

.no-topics
    display flex
    flex-direction column
    justify-content center
    align-items center
    width 100%
    button
      margin-top 20px

boxSize = 15
color = #333
color2 = #999
.loader-wrapper
  position relative
  flex 1
  .loader
    position absolute
    left 50%
    top 50%
    border-radius 100%
    width boxSize * 1px
    height boxSize * 1px
    box-shadow boxSize*1px boxSize*1px color2,
    boxSize*-1px boxSize*1px color,
    boxSize*-1px boxSize*-1px color2,
    boxSize*1px boxSize*-1px color
    animation spin ease infinite 4s
    transition-property opacity

    @-webkit-keyframes spin {
      0%,
      100% {
        box-shadow: boxSize*1px boxSize*1px color2,
        boxSize*-1px boxSize*1px color,
        boxSize*-1px boxSize*-1px color2,
        boxSize*1px boxSize*-1px color
      }

      25% {
        box-shadow: boxSize*-1px boxSize*1px color,
        boxSize*-1px boxSize*-1px color2,
        boxSize*1px boxSize*-1px color,
        boxSize*1px boxSize*1px color2
      }

      50% {
        box-shadow: boxSize*-1px boxSize*-1px color2,
        boxSize*1px boxSize*-1px color,
        boxSize*1px boxSize*1px color2,
        boxSize*-1px boxSize*1px color
      }

      75% {
        box-shadow: boxSize*1px boxSize*-1px color,
        boxSize*1px boxSize*1px color2,
        boxSize*-1px boxSize*1px color,
        boxSize*-1px boxSize*-1px color2
      }
    }
